block content
  .dashboard-container
    aside.sidebar
      .sidebar-header
        h2.nome-aluno
          i.bi.bi-person-circle 
          | Minha conta
      nav.sidebar-nav
        ul
          li
            a(href="#")
              i.bi.bi-heart-pulse-fill
              span Meus treinos
          li
            a(href="#")
              i.bi.bi-credit-card
              span Pagamentos
          li
